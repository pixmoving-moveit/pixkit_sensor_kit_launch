<launch>
  <arg name="front/input/frame" default="/can1/from_can_bus" />
  <arg name="rear/input/frame" default="/can0/from_can_bus" />
  <arg name="front/output_frame" default="front_ars408" />
  <arg name="rear/output_frame" default="rear_ars408" />
  <arg name="output/objects" default="objects_raw" />
  <arg name="output/scan" default="scan" />
  <arg name="publish_radar_track" default="true" />
  <arg name="publish_radar_scan" default="false" />

<group>
<push-ros-namespace namespace="/sensing/radar/front_center"/>
  <node pkg="pe_ars408_ros" exec="pe_ars408_node" name="pe_ars408_node" output="screen">
    <remap from="~/input/frame" to="$(var front/input/frame)" />
    <remap from="~/output/objects" to="$(var output/objects)" />
    <remap from="~/output/scan" to="$(var output/scan)" />
    <param name="output_frame" value="$(var front/output_frame)" />
    <param name="publish_radar_track" value="$(var publish_radar_track)" />
    <param name="publish_radar_scan" value="$(var publish_radar_scan)" />
  </node>
</group>

<group>
<push-ros-namespace namespace="rear_radar"/>
  <node pkg="pe_ars408_ros" exec="pe_ars408_node" name="pe_ars408_node" output="screen">
    <remap from="~/input/frame" to="$(var rear/input/frame)" />
    <remap from="~/output/objects" to="$(var output/objects)" />
    <remap from="~/output/scan" to="$(var output/scan)" />
    <param name="output_frame" value="$(var rear/output_frame)" />
    <param name="publish_radar_track" value="$(var publish_radar_track)" />
    <param name="publish_radar_scan" value="$(var publish_radar_scan)" />
  </node>
</group>
</launch>
